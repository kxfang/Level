<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
          package="me.kfang.levelly.app"
    android:versionCode="10"
    android:versionName="1.2.2" >

    <uses-sdk android:minSdkVersion="16" />
    <uses-feature
        android:name="android.hardware.sensor.accelerometer"
        android:required="true" />
    <uses-feature
        android:name="android.hardware.sensor.gyroscope"
        android:required="true" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:logo="@drawable/ic_launcher"
        android:label="@string/app_name" >
        <activity
            android:name="me.kfang.levelly.app.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/OverlayActionBarTheme"
            android:screenOrientation="portrait" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name="me.kfang.levelly.app.SettingsActivity"
            android:label="@string/settings"
            android:theme="@android:style/Theme.Holo.Light"
            android:screenOrientation="portrait"
            android:parentActivityName="me.kfang.levelly.app.MainActivity" />
    </application>

</manifest>
